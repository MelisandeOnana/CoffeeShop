{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 mt-8">
        <div class="relative bg-cover bg-center">
            <video autoplay muted loop class="absolute inset-0 w-full h-full object-cover">
                <source src="{{ asset('videos/cafe.mp4') }}" type="video/mp4">
            </video>
            <div class="relative z-10 swiper-container">
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        {% for slide in sliders %}
                            <div class="swiper-slide rounded-lg p-6 shadow-lg">
                                <h2 class="text-2xl font-bold mb-2 text-center text-white">{{ slide.title }}</h2>
                                <p class="mb-4 text-gray-200 text-center">{{ slide.content }}</p>
                                <div class="text-center mt-4">
                                    <a href="{{ slide.buttonLink }}" class="inline-block px-6 py-3 bg-yellow-400 text-gray-800 font-semibold rounded-lg">
                                        {{ slide.buttonText }}
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <!-- Pagination -->
                    <div class="swiper-pagination custom-pagination"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des produits best sellers -->
    <div class="font-[sans-serif] py-4 mx-auto lg:max-w-6xl max-w-lg md:max-w-full">
        <h2 class="text-4xl font-extrabold text-gray-800 mb-12">Nos Best Sellers</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for product in products %}
            <div class="bg-gray-200 rounded-xl cursor-pointer hover:scale-[1.03] transition-all relative overflow-hidden">
                <div class="p-6">
                    <div class="bg-gray-100 w-10 h-10 flex items-center justify-center rounded-full cursor-pointer absolute top-4 right-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16px" class="fill-gray-800 inline-block" viewBox="0 0 64 64">
                            <path d="M45.5 4A18.53 18.53 0 0 0 32 9.86 18.5 18.5 0 0 0 0 22.5C0 40.92 29.71 59 31 59.71a2 2 0 0 0 2.06 0C34.29 59 64 40.92 64 22.5A18.52 18.52 0 0 0 45.5 4ZM32 55.64C26.83 52.34 4 36.92 4 22.5a14.5 14.5 0 0 1 26.36-8.33 2 2 0 0 0 3.27 0A14.5 14.5 0 0 1 60 22.5c0 14.41-22.83 29.83-28 33.14Z" data-original="#000000"></path>
                        </svg>
                    </div>
                    <div class="w-2/3 h-[220px] overflow-hidden mx-auto aspect-w-16 aspect-h-8">
                        <img src="{{ asset(product.image) }}" alt="{{ product.name }}" class="h-full w-full object-contain" />
                    </div>
                </div>
                <div class="text-center bg-gray-100 p-6">
                    <h3 class="text-lg font-bold text-gray-800">{{ product.name }}</h3>
                    <a href="{{ path('products') }}" class="w-full flex items-center justify-center gap-3 mt-6 px-6 py-3 bg-yellow-400 text-base text-gray-800 font-semibold rounded-xl">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" viewBox="0 0 512 512">
                            <path d="M164.96 300.004h.024c.02 0 .04-.004.059-.004H437a15.003 15.003 0 0 0 14.422-10.879l60-210a15.003 15.003 0 0 0-2.445-13.152A15.006 15.006 0 0 0 497 60H130.367l-10.722-48.254A15.003 15.003 0 0 0 105 0H15C6.715 0 0 6.715 0 15s6.715 15 15 15h77.969c1.898 8.55 51.312 230.918 54.156 243.71C131.184 280.64 120 296.536 120 315c0 24.812 20.188 45 45 45h272c8.285 0 15-6.715 15-15s-6.715-15-15-15H165c-8.27 0-15-6.73-15-15 0-8.258 6.707-14.977 14.96-14.996zM477.114 90l-51.43 180H177.032l-40-180zM150 405c0 24.813 20.188 45 45 45s45-20.188 45-45-20.188-45-45-45-45 20.188-45 45zm45-15c8.27 0 15 6.73 15 15s-6.73 15-15 15-15-6.73-15-15 6.73-15 15-15zm167 15c0 24.813 20.188 45 45 45s45-20.188 45-45-20.188-45-45-45-45 20.188-45 45zm45-15c8.27 0 15 6.73 15 15s-6.73 15-15 15-15-6.73-15-15 6.73-15 15-15zm0 0" data-original="#000000"></path>
                        </svg>
                        Voir le produit
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    <!-- Témoignages clients -->
    <div class="font-[sans-serif] py-4 mx-auto lg:max-w-6xl max-w-lg md:max-w-full mt-12">
        <h2 class="text-4xl font-extrabold text-gray-800 mb-12">Témoignages clients</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-gray-200 rounded-xl p-6 shadow-lg">
                <p class="text-gray-700 mb-4">"Le meilleur café que j'ai jamais goûté !"</p>
                <p class="text-sm italic text-gray-500">- Jean Dupont</p>
            </div>
            <div class="bg-gray-200 rounded-xl p-6 shadow-lg">
                <p class="text-gray-700 mb-4">"Un service exceptionnel et un café délicieux."</p>
                <p class="text-sm italic text-gray-500">- Marie Curie</p>
            </div>
            <div class="bg-gray-200 rounded-xl p-6 shadow-lg">
                <p class="text-gray-700 mb-4">"Je recommande vivement ce magasin de café."</p>
                <p class="text-sm italic text-gray-500">- Albert Einstein</p>
            </div>
        </div>
    </div>
{% endblock %}